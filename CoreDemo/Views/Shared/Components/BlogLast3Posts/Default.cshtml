@using EntityLayer.Concrete
@model List<Blog>

<div class="col-lg-4 footer-grid-agileits-w3ls text-left">

    <div class="tech-btm">
        <h3>Son Postlar</h3>
        @foreach (var item in Model)
        {
            <div class="blog-grids row mb-3">
                <div class="col-md-5 blog-grid-left">
                    <a href="/Blog/BlogDetails/@item.BlogID">
                        <img src="~/coreBlogDemo/images/4.jpg" class="card-img-top img-fluid" alt="">
                    </a>
                </div>
                <div class="col-md-7 blog-grid-right">

                    <h5>
                        <a href="/Blog/BlogDetails/@item.BlogID">@item.BlogTitle </a>
                    </h5>
                    <div class="sub-meta">
                        <span>
                            <i class="far fa-clock"></i> @item.BlogCreateDate.ToShortDateString()
                        </span>
                    </div>
                </div>

            </div>
        }
    </div>
</div>